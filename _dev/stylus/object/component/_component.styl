.c-consultantCasette
  & + &
    margin-top 20px
  +sp()
    & + &
      margin-top 0
    &__inner
      background-color #fff
      padding 10px

  &__head
    width 100%
    padding 15px 30px
    background-color $navy
    position relative
    color #fff
    font-size 24px
    +sp()
      font-size 1.4rem
      padding 10px 15px
      margin-bottom 13px

  &__body
    padding 0 30px 15px 15px
    background-color #fff
    font-size 0
    +sp()
      padding 0

  &__initial
    text-align right
    position absolute
    right 30px

  &__thumbnail
    display inline-block
    width 242px
    margin-right 30px
    font-size 0
    +sp()
      width 37.612%
      margin-right 2.989%
      margin-bottom 15px

  &__profile
    display inline-block
    width 628px
    min-height 349px
    padding-bottom 30px
    position relative
    vertical-align top
    +sp()
      width 59%
      padding 0
      min-height 179.2px

  &__img
    width 100%
    height 300px
    margin-bottom 15px
    +sp()
      height auto

  &__type
    display block
    width 100%
    padding 7px 10px
    color $navy
    border 1px solid
    font-size 1.4rem
    line-height 1.8rem
    text-align center

  &__profTitle
    margin-top 30px
    color $navy
    font-size 2rem
    font-weight bold
    +sp()
      font-size 1.4rem
      margin-bottom 5px
      margin-top 0

  &__profText
    margin-top 10px
    font-size 1.4rem
    +sp()
      font-size 1.2rem
      margin-bottom 15px
      margin-top 0

  &__link
    color $navy
    font-size 1.6rem
    line-height 1
    text-align right
    padding 1em
    span
      margin-left 0.5em
      font-size inherit
      line-height 1
    +sp()
      font-size 1.2rem
      a
        display block
        text-align center
